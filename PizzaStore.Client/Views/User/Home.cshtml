@model PizzaStore.Client.Models.UserViewModel

<section class="text-top text-right">
    <a asp-controller="user" asp-action="logout" class="btn btn-danger">Sign Out</a>
</section>

<section class="text-center">
    <p>
        <h4>Hello @Model.Name, how can we help you today?</h4>
    </p>

    <a asp-controller="order" asp-action="home" class="btn btn-primary">Order Pizzas</a>
    <a asp-controller="user" asp-action="orderhistory" class="btn btn-secondary">View your order history</a>
</section>